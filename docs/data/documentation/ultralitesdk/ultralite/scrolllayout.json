t time."}],"url":"\/documentation\/ultralitesdk\/scrolllayout","identifier":"doc:\/\/UltraliteSDK\/documentation\/UltraliteSDK\/ScrollLayout","type":"topic","role":"symbol","navigatorTitle":[{"text":"ScrollLayout","kind":"identifier"}],"kind":"symbol","title":"ScrollLayout","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"text":"ScrollLayout","kind":"identifier"}]}}}